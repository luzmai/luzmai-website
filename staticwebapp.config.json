{
  "routes": [
    {
      "route": "/logo-luzmai.svg",
      "headers": {
        "content-type": "image/svg+xml",
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/favicon.ico", 
      "headers": {
        "content-type": "image/x-icon"
      }
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["*.{css,scss,js,ts,png,gif,ico,jpg,jpeg,svg,woff,woff2,ttf,eot}"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html"
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}